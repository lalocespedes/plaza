{% extends 'templates/main.twig' %}

{% block title %}

{{ title }}

{% endblock title %}

{% block content %}

	{% for product in category['products'] %}

		<div class="col-md-4 col-sm-12">
		    <img src="http://placehold.it/460x250/e67e22/ffffff&text=HTML5" class="img-responsive">
		    <div><h3><a href="{{ urlFor('getProduct', {slug: product.slug })}}">{{ product.name }}</a></h3></div>
		    <div class="col-md-6 col-sm-12">

		    	<div class="lead">
		    		{{ product.price_1}}
		    	</div>

			</div>
			<div class="col-md-6 col-sm-12">

				<form action="{{ urlFor('cart.add', {id: product.id }) }}" method="POST" class="form-inline" role="form">
						<div class="form-group">
							<input type="hidden" class="form-control" id="{{ product.id}}">
						</div>					
						<button type="submit" class="btn btn-success btn-sm">COMPRAR AHORA</button>
				</form>
			</div>
		</div>
	{% endfor %}

{% endblock content %}